<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyWidget.Button.BaseButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyWidget.Button.BlackButton" parent="MyWidget.Button.BaseButton">
        <item name="android:background">@drawable/button_colored_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyWidget.Button.BigBlackButton" parent="MyWidget.Button.BlackButton">
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="MyWidget.Button.SmallBlackButton" parent="MyWidget.Button.BlackButton">
        <item name="android:layout_marginHorizontal">120dp</item>
    </style>

    <style name="MyWidget.Button.StrokeButton" parent="MyWidget.Button.BaseButton">
        <item name="android:background">@drawable/button_stroke_selector</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="MyWidget.Button.BigStrokeButton" parent="MyWidget.Button.StrokeButton">
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="MyWidget.Button.TransparentButton" parent="MyWidget.Button.BaseButton">
        <item name="android:background">@drawable/button_transparent_background</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
    </style>

    <style name="MyWidget.Button.SmallTransparentButton" parent="MyWidget.Button.TransparentButton">
        <item name="android:layout_marginHorizontal">120dp</item>
    </style>

    <style name="MyWidget.CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_state</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearanceOverlay.TextInputLayout</item>
        <item name="errorEnabled">true</item>
        <item name="endIconTint">@color/text_input_layout_state</item>
        <item name="errorIconDrawable">@drawable/error</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="hintTextColor">@color/mainPink</item>
    </style>

    <style name="MyWidget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:imeOptions">actionGo</item>
    </style>


    <style name="MyShapeAppearanceOverlay.TextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>


    <style name="MyWidget.TextInputLayoutWithTextDelete" parent="MyWidget.CustomTextInputLayout">
        <item name="endIconDrawable">@drawable/clear_icon</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="endIconMode">clear_text</item>
    </style>


    <style name="MyWidget.SearchViewFromTextInputLayout" parent="MyWidget.TextInputLayoutWithTextDelete">
        <item name="errorEnabled">false</item>
        <item name="startIconTint">@color/mainGray</item>
        <item name="startIconDrawable">@drawable/search_icon</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Text.TabItemStyle" parent="Widget.Design.TabLayout">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/mainGray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyWidget.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/mainPink</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@drawable/tab_text_selector</item>
        <item name="tabTextAppearance">@style/Text.TabItemStyle</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Widget.MyShapeableImage" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_sheet</item>
    </style>

    <style name="MyWidget.EditText.Outlined.SingleLine" parent="MyWidget.EditText">
        <item name="android:inputType">text</item>
    </style>

    <style name="MyWidget.EditText.Outlined.MultiLine" parent="MyWidget.EditText.Outlined.SingleLine">
        <item name="android:maxLines">3</item>
        <item name="android:lines">3</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="MyWidget.CustomChipStyle.Checkable" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyWidget.CustomChipStyle.AddNewChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/action_chip_text_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIcon">@drawable/plus_icon</item>
        <item name="chipIconTint">@color/action_chip_text_selector</item>
    </style>

    <style name="MyWidget.ClickableText" parent="Widget.AppCompat.TextView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MyWidget.ClickableText.WithPadding" parent="MyWidget.ClickableText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="MyWidget.ClickableText.Settings" parent="MyWidget.ClickableText">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="paddingStart">0dp</item>
    </style>

    <style name="MyWidget.ClickableText.Pink" parent="MyWidget.ClickableText.WithPadding">
        <item name="android:paddingStart">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mainPink</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="MyWidget.TextView.PhotoDetailsAttrs" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mainGray</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyWidget.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="selectionRequired">false</item>
        <item name="singleSelection">false</item>
        <item name="chipSpacingHorizontal">8dp</item>
        <item name="chipSpacingVertical">8dp</item>
    </style>

    <style name="MyWidget.CircleButtonStroke" parent="">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/mainGray</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Circle</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyWidget.SettingsFragment.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyWidget.PickPhotoModal.ClickableText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>